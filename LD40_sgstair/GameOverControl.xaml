<UserControl x:Class="LD40_sgstair.GameOverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LD40_sgstair"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2" Margin="20" Fill="#99FFFFFF" RadiusX="20" RadiusY="20"/>
        <Label x:Name="LabelHeading" Content="Game Over" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="64"/>
        <StackPanel Grid.Row="1" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel x:Name="StackDetails">
                
            </StackPanel>
            <Button x:Name="ButtonMenu" Width="300" Height="40" Content="Return to Main Menu" FontSize="24" Margin="5" Click="Exit_Click"/>
        </StackPanel>            
    </Grid>
</UserControl>
