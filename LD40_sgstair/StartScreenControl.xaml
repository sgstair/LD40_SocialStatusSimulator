<UserControl x:Class="LD40_sgstair.StartScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LD40_sgstair"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2" Margin="20" Fill="#99FFFFFF" RadiusX="20" RadiusY="20"/>
        <Label Content="Social Status Simulator 2017" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="64"/>
        <StackPanel Grid.Row="1" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Width="300" Height="60" Content="Start Game" FontSize="36" Margin="5" Click="StartGame_Click" />
            <Button Width="300" Height="40" Content="Exit" FontSize="24" Margin="5" Click="Exit_Click"/>
           <!-- <Button Width="300" Height="30" Content="Test: 1000 iterations" FontSize="16" Margin="5" Click="Test_Click"/> -->
        </StackPanel>
    </Grid>
</UserControl>
