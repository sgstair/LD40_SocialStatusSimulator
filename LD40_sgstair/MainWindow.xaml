<Window x:Class="LD40_sgstair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LD40_sgstair"
        mc:Ignorable="d"
        Title="Social Status Simulator 2017" Height="768" Width="1024">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="DarkGoldenrod" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <local:GameUI x:Name="GameUI" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden"/>
        <local:StartScreenControl x:Name="StartScreen" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <local:GameOverControl x:Name="GameOverScreen" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden"/>
    </Grid>
</Window>
