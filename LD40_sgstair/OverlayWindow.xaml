<UserControl x:Class="LD40_sgstair.OverlayWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LD40_sgstair"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800" Background="#4C000000">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="400">
            <Rectangle Fill="#FFF3DC8B" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Stroke="Black" RadiusX="15" RadiusY="15" StrokeThickness="3"/>
            <Label x:Name="label" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30"/>
            <Button x:Name="button1" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="110" Margin="0,0,10,10"/>
            <Button x:Name="button2" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="110" Margin="0,0,125,10"/>
        </Grid>
    </Grid>
</UserControl>
